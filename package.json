{
  "name": "demo",
  "version": "0.0.1",
  "description": "A simple template for Localize training",
  "license": "Private",
  "scripts": {
    "start": "NODE_OPTIONS=--enable-source-maps NODE_PATH=./dist node dist/main.js",
    "build": "pnpm run build:ts",
    "build:ts": "tsc --build",
    "build:ts:debug": "tsc",
    "watch:ts": "tsc -w --preserveWatchOutput",
    "tscheck": "tsc --project ./tsconfig.json --pretty --rootDir ./",
    "debug:serve": "LOG_LEVEL=debug nodemon --config ./nodemon.json  --inspect=127.0.0.1:9249 dist/main.js",
    "debug:watch": "concurrently --handle-input -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold\" \"pnpm run watch:ts\" \"pnpm run debug:serve\"",
    "debug": "pnpm run build:ts:debug && pnpm run debug:watch",
    "test": "jest"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.2.0",
    "apollo-server-express": "^3.5.0",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.6",
    "debug": "^4.3.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "node-cache": "^5.1.2",
    "path": "^0.12.7",
    "pnpm": "^6.24.2",
    "sharp": "^0.29.3",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.4.0",
    "tslib": "2.3.0",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.40",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.0",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/lru-cache": "^5.1.1",
    "@types/node": "*",
    "@types/sharp": "^0.29.4",
    "@types/source-map-support": "^0.5.3",
    "@types/validator": "^13.7.1",
    "concurrently": "^5.3.0",
    "jest": "^27.4.5",
    "nodemon": "^2.0.15",
    "serve": "^11.3.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.3.5"
  }
}
