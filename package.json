{
  "name": "demo",
  "version": "0.0.1",
  "description": "A simple template for Localize training",
  "license": "Private",
  "scripts": {
    "start": "NODE_OPTIONS=--enable-source-maps NODE_PATH=./dist node dist/main.js",
    "build": "pnpm run build:ts",
    "build:ts": "tsc --build",
    "build:ts:debug": "tsc",
    "watch:ts": "tsc -w --preserveWatchOutput",
    "tscheck": "tsc --project ./tsconfig.json --pretty --rootDir ./",
    "debug:serve": "LOG_LEVEL=debug nodemon --config ./nodemon.json  --inspect=127.0.0.1:9249 dist/main.js",
    "debug:watch": "concurrently --handle-input -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold\" \"pnpm run watch:ts\" \"pnpm run debug:serve\"",
    "debug": "pnpm run build:ts:debug && pnpm run debug:watch"
  },
  "dependencies": {
    "debug": "^4.3.3",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "path": "^0.12.7",
    "pnpm": "^6.24.2",
    "source-map-support": "^0.5.19",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/express": "^4.17.13",
    "@types/node": "*",
    "@types/source-map-support": "^0.5.3",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.15",
    "serve": "^11.3.2",
    "typescript": "4.3.5"
  }
}
